{% extends 'db.template.html.twig' %}

    {% block content %}
<div class="ui grid">

    <div class="twelve wide column">

        <h1>Benutzer</h1>

        {% for message in app.flashes('error') %}
            <div class="ui negative message">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('succes') %}
            <div class="ui positive message">{{ message }}</div>
        {% endfor %}

        <table class="ui table">

            <thead>
            <tr>
                <th>Benutername</th>
                <th>Angezeigter Name</th>
                <th>Aktionen</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.displayName }}</td>
                    <td><a href="/dashboard/admin/users/edit/{{ user.id }}" class="ui primary button">Bearbeiten</a> <a href="/dashboard/admin/users/delete/{{ user.id }}" class="ui negative button">LÃ¶schen</a></td>
                </tr>
            {% endfor %}
            </tbody>

        </table>

    </div>

    <div class="four wide column">
        <div class="ui card">
            <div class="content">Aktionen</div>
            <div class="content">
                <a class="ui primary fluid button" href="{{ path('createUser') }}">Benutzer erstellen</a>
            </div>
        </div>
    </div>

</div>
{% endblock %}